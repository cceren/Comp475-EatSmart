<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="35dip" />
         <stroke android:width="1dip" android:color="#57a592" />
         <gradient android:angle="-90" android:startColor="#6abaa7" android:endColor="#6abaa7"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="35dip" />
         <stroke android:width="122dip" android:color="#6abaa7" />
         <solid android:color="#6abaa7"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="35dip" />
         <stroke android:width="1dip" android:color="#6abaa7" />
         <gradient android:angle="-90" android:startColor="#6abaa7" android:endColor="#57a592" />            
     </shape>
 </item>
</selector>
