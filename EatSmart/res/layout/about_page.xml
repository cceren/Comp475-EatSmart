<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#8ccfbf">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="45dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/app_banner" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="25dp"
            android:lines="2"
            android:text="Developed by: Cristian Ceren, Isacar Racine &amp; Ken Gan"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/eat_smart_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:lines="2"
            android:text="We help you eat healthy. We help you eat smart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_light"
            android:textSize="13sp"
            android:typeface="normal" />

    </LinearLayout>

</RelativeLayout>
